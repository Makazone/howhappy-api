# Environment
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/howhappy

# Authentication
JWT_SECRET=your-secret-key-minimum-32-characters-long-replace-this

CORS_ALLOWED_ORIGINS=http://localhost:8080,https://app.howhappy.com

# MinIO Object Storage
# Web console available at http://localhost:9001 when running via docker-compose
MINIO_ENDPOINT=http://localhost:9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=howhappy

# External APIs (optional for development)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
LLM_API_KEY=your-llm-api-key
LLM_MODEL=gpt-4

# Worker Configuration
WORKER_CONCURRENCY=5
JOB_RETENTION_DAYS=7
