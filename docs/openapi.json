      },
      "ListSurveyQuery": {
        "type": "object",
        "properties": {
          "cursor": {
            "type": "string",
            "format": "uuid"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 20
