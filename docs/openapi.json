          "survey": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "ownerId": {
                "type": "string",
                "format": "uuid"
              },
              "title": {
                "type": "string"
              },
              "prompt": {
                "type": "string"
