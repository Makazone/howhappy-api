        "title": "CompleteResponseRequest"
      },
      "PrepareResponseResult": {
        "type": "object",
        "properties": {
          "response": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "surveyId": {
                "type": "string",
                "format": "uuid"
              },
              "registeredUserId": {
                "type": [
                  "string",
                  "null"
                ],
                "format": "uuid"
              },
              "anonymousEmail": {
                "type": [
                  "string",
                  "null"
                ],
                "format": "email"
              },
              "audioUrl": {
                "type": [
                  "string",
                  "null"
                ],
                "format": "uri"
