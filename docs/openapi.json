              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": [
              "id",
              "ownerId",
              "title",
              "prompt",
              "status",
              "createdAt",
              "updatedAt"
            ]
          }
        },
        "required": [
          "survey"
        ],
        "title": "SurveyCreatedResponse"
      },
      "SurveyUpdateResponse": {
        "type": "object",
        "properties": {
          "survey": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "ownerId": {
                "type": "string",
                "format": "uuid"
              },
              "title": {
                "type": "string"
              },
              "prompt": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "enum": [
                  "DRAFT",
                  "ACTIVE",
                  "CLOSED"
                ]
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": [
              "id",
              "ownerId",
              "title",
              "prompt",
              "status",
              "createdAt",
              "updatedAt"
            ]
          }
        },
        "required": [
          "survey"
