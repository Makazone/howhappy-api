              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": [
              "id",
              "surveyId",
              "uploadState",
              "transcriptionStatus",
              "analysisStatus",
              "createdAt",
              "updatedAt"
            ]
          },
          "uploadUrl": {
            "type": "string",
            "format": "uri"
          },
          "responseToken": {
            "type": "string"
          }
        },
        "required": [
          "response",
          "uploadUrl",
          "responseToken"
        ],
        "title": "PrepareResponseResult"
      },
      "ResponseCompletion": {
        "type": "object",
        "properties": {
          "response": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "surveyId": {
                "type": "string",
