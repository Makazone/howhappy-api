                },
                "createdAt": {
                  "type": "string",
                  "format": "date-time"
                },
                "updatedAt": {
                  "type": "string",
                  "format": "date-time"
                }
              },
              "required": [
                "id",
                "ownerId",
                "title",
                "prompt",
                "status",
                "createdAt",
                "updatedAt"
              ]
